<Page x:Class="MusicMatch.StudentHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicMatch"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="StudentHome">

    <Page.Resources>
        <!-- Apple/Spotify-like Dark Aesthetic -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#121212"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B3B3B3"/>

        <!-- Control Styles -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#282828"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Border" CornerRadius="8" Background="{TemplateBinding Background}" BorderThickness="0" Padding="10">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="20" Background="#181818">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Find Your Perfect Teacher" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Browse top-rated music teachers near you" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="txtWelcome" Text="Welcome" Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button x:Name="btnLogout" Click="btnLogout_Click" Content="Logout" Background="Transparent" Foreground="#FF5555" BorderThickness="0" Cursor="Hand" FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Search/Filter -->
                <RowDefinition Height="*"/>    <!-- List -->
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="txtSearch" TextChanged="txtSearch_TextChanged" Tag="Search by Name, City..." ToolTip="Search by name or city"/>
                <TextBlock IsHitTestVisible="False" Text="Search teachers..." VerticalAlignment="Center" Margin="15,0,0,0" Foreground="#888888">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Teachers List -->
            <ListView x:Name="lvTeachers" Grid.Row="1" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/> <!-- Avatar/Icon -->
                                <ColumnDefinition Width="*"/>  <!-- Info -->
                                <ColumnDefinition Width="Auto"/> <!-- Price/Rating -->
                            </Grid.ColumnDefinitions>

                            <!-- Graphic Placeholder -->
                            <Border Width="60" Height="60" CornerRadius="30" Background="#333333" Margin="0,0,15,0">
                                <TextBlock Text="{Binding FirstName, StringFormat={}{0:1}}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="#1DB954"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding FirstName}" FontSize="18" FontWeight="SemiBold" Foreground="White">
                                    <Run Text=" "/>
                                    <Run Text="{Binding LastName}"/>
                                </TextBlock>
                                <TextBlock Text="{Binding City}" FontSize="14" Foreground="#B3B3B3" Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding Email}" FontSize="12" Foreground="#666666" Margin="0,2,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="â­" Foreground="#FFD700" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Rating}" Foreground="White" FontWeight="Bold"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Price, StringFormat={}{0} ILS/hr}" Foreground="#1DB954" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
