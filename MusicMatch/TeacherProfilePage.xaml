<Page x:Class="MusicMatch.TeacherProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicMatch"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="TeacherProfilePage"
      Background="#121212">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="40" MaxWidth="900">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Back Button -->
            <Button x:Name="btnBack" Click="btnBack_Click" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" Margin="0,0,0,20" Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â†" FontSize="20" Foreground="White" Margin="0,0,5,0"/>
                    <TextBlock Text="Back to Search" FontSize="14" Foreground="#B3B3B3"/>
                </StackPanel>
            </Button>

            <!-- Profile Header -->
            <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="12" Padding="40" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Profile Picture -->
                    <Border Width="120" Height="120" CornerRadius="60" Background="#333333" Margin="0,0,30,0">
                        <Grid>
                            <!-- Default Avatar (shown if no profile picture) -->
                            <TextBlock x:Name="txtInitial" Text="T" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontWeight="Bold" Foreground="#1DB954"/>
                            
                            <!-- Profile Picture (if available) -->
                            <Ellipse x:Name="imgProfile" Visibility="Collapsed">
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="imgProfileBrush" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Grid>
                    </Border>

                    <!-- Teacher Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="txtName" Text="Teacher Name" FontSize="32" FontWeight="Bold" Foreground="White"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock x:Name="txtCity" Text="City" FontSize="16" Foreground="#B3B3B3"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Border Background="#FFD700" CornerRadius="15" Padding="10,5" Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="â­" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="txtRating" Text="0.0" FontWeight="Bold" Foreground="#121212"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#1DB954" CornerRadius="15" Padding="10,5">
                                <TextBlock x:Name="txtPrice" Text="0 ILS/hr" FontWeight="Bold" Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <TextBlock x:Name="txtJobs" Text="0 jobs completed" FontSize="14" Foreground="#666666" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Sections -->
            <StackPanel Grid.Row="2">
                
                <!-- About Section -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="30" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="About" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,15"/>
                        <TextBlock x:Name="txtDescription" Text="No description available." FontSize="14" Foreground="#B3B3B3" TextWrapping="Wrap" LineHeight="22"/>
                    </StackPanel>
                </Border>

                <!-- Instruments Section -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="30" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Instruments" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,15"/>
                        <ItemsControl x:Name="icInstruments">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2A2A2A" CornerRadius="20" Padding="15,8" Margin="5">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸŽµ" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Name}" FontSize="14" Foreground="White"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock x:Name="txtNoInstruments" Text="No instruments listed" FontSize="14" Foreground="#666666" Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <!-- Contact Section -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="30">
                    <StackPanel>
                        <TextBlock Text="Contact Information" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,15"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="ðŸ“§" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtEmail" Text="email@example.com" FontSize="14" Foreground="#B3B3B3"/>
                        </StackPanel>
                        <Button x:Name="btnContact" Click="btnContact_Click" Content="Send Message" Background="#1DB954" Foreground="White" FontWeight="Bold" Height="45" Margin="0,10,0,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" CornerRadius="22" Background="{TemplateBinding Background}" Padding="20,0">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#1ED760"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
