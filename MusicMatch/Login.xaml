<Page x:Class="MusicMatch.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicMatch"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#121212"
      Title="Login">
    
    <Grid>
        <Viewbox Stretch="Uniform" Margin="0,50,0,50" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border CornerRadius="12">

                <Border
                BorderThickness="2"
                CornerRadius="10"
                Opacity="0.95">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Offset="0" Color="#222222" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Grid>
                        <StackPanel
                        Grid.Row="1"
                        Width="220"
                        Margin="0,35,0,0"
                        Orientation="Vertical">
                            <TextBlock
                                Height="30"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="25"
                                FontWeight="Medium"
                                Foreground="White"
                                Text="The last letter" />
                            <TextBlock
                            Margin="0,60,0,0"
                            FontSize="12"
                            FontWeight="Bold"
                            Foreground="DarkGray"
                            Text="Username"/>
                            <TextBox
                            x:Name="txtUser"
                            Height="28"
                            Margin="0,5,0,0"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            BorderBrush="DarkGray"
                            BorderThickness="0,0,0,2"
                            CaretBrush="LightGray"
                            FontSize="13"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Lachmish" />
                            <TextBlock
                            Margin="0,15,0,0"
                            FontSize="12"
                            FontWeight="Bold"
                            Foreground="DarkGray"
                            Text="Password" />
                            <PasswordBox
                            x:Name="txtPass"
                            Height="28"
                            Margin="0,5,0,0"
                            VerticalContentAlignment="Center"
                            BorderBrush="DarkGray"
                            BorderThickness="0,0,0,2"
                            CaretBrush="LightGray"
                            FontSize="13"
                            FontWeight="Bold"
                            Foreground="White"
                            Password="Test!1234" />

                            <Button
                            x:Name="btnLogin"
                            Margin="0,30,0,0"
                            Click="btnLogin_Click"
                            Content="LOG IN"
                            Cursor="Hand"
                            FontSize="12"
                            Foreground="White">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FF580758" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFA038A0" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                        Width="150"
                                        Height="40"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />

                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button
                                HorizontalAlignment="Center"
                                x:Name="SwitchToSignUp"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                Click="SwitchToSignUp_Click"
                                Content="Sign up"
                                Cursor="Hand"
                                FontSize="12"
                                FontWeight="Medium"
                                Foreground="White">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

            </Border>
        </Viewbox>

        <Frame
            x:Name="MainFrame"
            Grid.RowSpan="3"
            Grid.ColumnSpan="3"
            NavigationUIVisibility="Hidden" Navigated="MainFrame_Navigated" />

    </Grid>
</Page>