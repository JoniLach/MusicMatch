<Page x:Class="MusicMatch.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicMatch"
      mc:Ignorable="d" 
      d:DesignHeight="1500" d:DesignWidth="1000"
      Title="Settings"
      Background="#121212">

    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="6" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,50" Width="400">
                
                <!-- Header -->
                <TextBlock Text="Account Settings" FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <TextBlock Text="Manage your profile and account details" FontSize="16" Foreground="#B3B3B3" Margin="0,0,0,50"/>

                <!-- Profile Section -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="40" Margin="0,0,0,25">
                    <StackPanel>
                        <TextBlock Text="Personal Information" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,30"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- First Name -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="First Name" Foreground="#B3B3B3" Margin="0,0,0,10"/>
                                <TextBox x:Name="txtFirstName"/>
                            </StackPanel>

                            <!-- Last Name -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Last Name" Foreground="#B3B3B3" Margin="0,0,0,10"/>
                                <TextBox x:Name="txtLastName"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Email Address" Foreground="#B3B3B3" Margin="0,25,0,10"/>
                        <TextBox x:Name="txtEmail"/>
                        
                        <TextBlock Text="City" Foreground="#B3B3B3" Margin="0,25,0,10"/>
                        <TextBox x:Name="txtCity"/>

                        <TextBlock Text="Username" Foreground="#B3B3B3" Margin="0,25,0,10"/>
                        <TextBox x:Name="txtUsername" IsReadOnly="True" Opacity="0.6" ToolTip="Username cannot be changed"/>
                    </StackPanel>
                </Border>

                <!-- Profile Picture Section -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="40" Margin="0,0,0,25">
                    <StackPanel>
                        <TextBlock Text="Profile Picture" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,30"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Profile Picture Preview -->
                            <Border Width="100" Height="100" CornerRadius="50" Background="#333333">
                                <Grid>
                                    <TextBlock x:Name="txtProfileInitial" Text="U" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="#1DB954"/>
                                    <Ellipse x:Name="imgProfilePreview" Visibility="Collapsed">
                                        <Ellipse.Fill>
                                            <ImageBrush x:Name="imgProfileBrush" Stretch="UniformToFill"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Grid>
                            </Border>

                            <!-- Upload Controls -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <Button x:Name="btnBrowseProfilePic" Click="btnBrowseProfilePic_Click" Content="Choose Picture" Background="#1DB954" Foreground="White" FontWeight="Bold" Height="40" Margin="0,10,0,0" HorizontalAlignment="Left" Width="150">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" CornerRadius="20" Background="{TemplateBinding Background}" Padding="20,0">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#1ED760"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Security Section -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="40" Margin="0,0,0,25">
                    <StackPanel>
                        <TextBlock Text="Security" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,30"/>
                        
                        <TextBlock Text="Password" Foreground="#B3B3B3" Margin="0,0,0,10"/>
                        <PasswordBox x:Name="txtPassword" Background="#2A2A2A" Foreground="White" BorderThickness="0" Padding="12" FontSize="14" MinHeight="40"/>
                        <TextBlock Text="Leave blank to keep current password" FontSize="12" Foreground="#666666" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Teacher Specific Section (Visible only if Teacher) -->
                <Border x:Name="pnlTeacherSettings" Background="#1E1E1E" CornerRadius="12" Padding="40" Margin="0,0,0,25" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Teacher Profile" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,30"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Hourly Rate (ILS)" Foreground="#B3B3B3" Margin="0,0,0,10"/>
                                <TextBox x:Name="txtPrice"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Jobs Completed" Foreground="#B3B3B3" Margin="0,0,0,10"/>
                                <TextBox x:Name="txtJobs" IsReadOnly="True" Opacity="0.6"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button x:Name="btnCancel" Click="btnCancel_Click" Content="Cancel" Background="Transparent" Foreground="White" Margin="0,0,15,0" Width="120" Height="45">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="22" BorderBrush="#333333" BorderThickness="2" Background="Transparent">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button x:Name="btnSave" Click="btnSave_Click" Content="Save Changes" Background="#1DB954" Foreground="White" FontWeight="Bold" Width="160" Height="45">
                         <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" CornerRadius="22" Background="#1DB954">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#1ED760"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>