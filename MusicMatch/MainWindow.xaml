<Window x:Class="MusicMatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Modern Left Menu" Height="400" Width="700"
        Background="#F0F2F5"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Button Style for Sidebar -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10 8" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DCE6F1" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <!-- Sidebar -->
            <ColumnDefinition Width="*" />
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar Menu -->
        <StackPanel Grid.Column="0" Background="#2D2F33">
            <TextBlock Text="☰  Menu"
                       FontSize="16" FontWeight="Bold"
                       Foreground="White" Margin="12" />
            <Button x:Name="btnSearchHome" Content="&#x1F50D;  Search" Click="Search_Click"
                    Style="{StaticResource MenuButtonStyle}" Foreground="White" Margin="5" />
            <Button Content="&#x2699;  Settings" Click="Settings_Click"
                    Style="{StaticResource MenuButtonStyle}" Foreground="White" Margin="5" />
            <Button Content="&#128488;  Chats" Click="Chat_Click"
                    Style="{StaticResource MenuButtonStyle}" Foreground="White" Margin="5"/>
            <Button Content="&#127918;  Mini game" Click="MiniGame_Click"
                    Style="{StaticResource MenuButtonStyle}" Foreground="White" Margin="5"/>
        </StackPanel>

        <!-- Main Content -->
        <Frame Grid.Column="1" x:Name="MainFrame" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>