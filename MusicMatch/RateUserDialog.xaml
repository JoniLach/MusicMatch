<Window x:Class="MusicMatch.RateUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rate User" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#181818" ResizeMode="NoResize" WindowStyle="None">
    
    <Border BorderBrush="#333333" BorderThickness="1">
        <StackPanel Margin="20">
            <TextBlock Text="Rate Session" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock x:Name="txtPrompt" Text="How was your lesson with X?" FontSize="16" Foreground="#B3B3B3" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,20"/>
            
            <!-- Stars Selection -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                <RadioButton GroupName="Rating" Tag="1" Click="Rating_Click" Content="⭐" FontSize="24" Margin="5"/>
                <RadioButton GroupName="Rating" Tag="2" Click="Rating_Click" Content="⭐" FontSize="24" Margin="5"/>
                <RadioButton GroupName="Rating" Tag="3" Click="Rating_Click" Content="⭐" FontSize="24" Margin="5"/>
                <RadioButton GroupName="Rating" Tag="4" Click="Rating_Click" Content="⭐" FontSize="24" Margin="5"/>
                <RadioButton GroupName="Rating" Tag="5" Click="Rating_Click" Content="⭐" FontSize="24" Margin="5" IsChecked="True"/>
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="btnCancel" Click="btnCancel_Click" Content="Cancel" Height="40" Background="#333333" Foreground="White" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" CornerRadius="20" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#444444"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnSubmit" Click="btnSubmit_Click" Grid.Column="2" Content="Submit Rating" Height="40" Background="#1DB954" Foreground="White" FontWeight="Bold" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" CornerRadius="20" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1ED760"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</Window>
