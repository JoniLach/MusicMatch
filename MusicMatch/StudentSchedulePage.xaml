<Page x:Class="MusicMatch.StudentSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicMatch"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="My Schedule" Background="#121212">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="My Booked Lessons" FontSize="28" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,0,0,20"/>

        <!-- Schedule List -->
        <ListView x:Name="lstSchedule" Grid.Row="1" Background="Transparent" BorderThickness="0">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Margin" Value="0,0,0,10"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border Background="#1E1E1E" CornerRadius="8" Padding="15">
                                    <ContentPresenter/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding LessonDate, StringFormat=D}" Foreground="White" FontWeight="SemiBold" FontSize="16"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="{Binding StartTime}" Foreground="#BBBBBB" FontSize="14"/>
                                <TextBlock Text=" â€¢ " Foreground="#555555"/>
                                <TextBlock Text="{Binding Duration}" Foreground="#BBBBBB" FontSize="14"/>
                                <TextBlock Text=" mins" Foreground="#BBBBBB" FontSize="14"/>
                            </StackPanel>
                            <TextBlock x:Name="txtTeacher" Foreground="#1DB954" FontSize="12" Margin="0,5,0,0"/>
                        </StackPanel>

                        <Border Grid.Column="1" Background="#1DB954" CornerRadius="4" Padding="15,5" MinWidth="100">
                           <TextBlock Text="BOOKED" Foreground="White" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Empty State -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="pnlEmpty" Visibility="Collapsed">
            <TextBlock Text="ðŸ“…" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="No lessons booked yet" Foreground="#666666" FontSize="18" HorizontalAlignment="Center"/>
            <TextBlock Text="Search for teachers and book your first lesson!" Foreground="#555555" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Footer -->
        <Button Grid.Row="2" x:Name="btnBack" Content="Back" Click="btnBack_Click" Width="100" Height="35" HorizontalAlignment="Left" Margin="0,20,0,0" Background="#333333" Foreground="White" BorderThickness="0">
             <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
