<Page x:Class="MusicMatch.TeacherHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicMatch"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="TeacherHomePage"
      Background="#121212">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,30">
            <StackPanel HorizontalAlignment="Left">
                <TextBlock x:Name="txtWelcome" Text="Welcome back, Teacher!" FontSize="32" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Here's your teaching dashboard" FontSize="16" Foreground="#B3B3B3" Margin="0,5,0,0"/>
            </StackPanel>
            
            <Button x:Name="btnLogout" Click="btnLogout_Click" HorizontalAlignment="Right" VerticalAlignment="Center" 
                    Content="Logout" Background="Transparent" Foreground="#FF5555" BorderThickness="0" Cursor="Hand" FontSize="14"/>
        </Grid>

        <!-- Stats Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Jobs Card -->
            <Border Grid.Column="0" Background="#1E1E1E" CornerRadius="12" Padding="25">
                <StackPanel>
                    <TextBlock Text="ðŸ“Š" FontSize="32" Margin="0,0,0,10"/>
                    <TextBlock Text="Total Jobs" FontSize="14" Foreground="#B3B3B3"/>
                    <TextBlock x:Name="txtTotalJobs" Text="0" FontSize="36" FontWeight="Bold" Foreground="#1DB954" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Rating Card -->
            <Border Grid.Column="2" Background="#1E1E1E" CornerRadius="12" Padding="25">
                <StackPanel>
                    <TextBlock Text="â­" FontSize="32" Margin="0,0,0,10"/>
                    <TextBlock Text="Your Rating" FontSize="14" Foreground="#B3B3B3"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock x:Name="txtRating" Text="0.0" FontSize="36" FontWeight="Bold" Foreground="#FFD700"/>
                        <TextBlock Text="/5.0" FontSize="20" Foreground="#666666" VerticalAlignment="Bottom" Margin="5,0,0,8"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Hourly Rate Card -->
            <Border Grid.Column="4" Background="#1E1E1E" CornerRadius="12" Padding="25">
                <StackPanel>
                    <TextBlock Text="ðŸ’°" FontSize="32" Margin="0,0,0,10"/>
                    <TextBlock Text="Hourly Rate" FontSize="14" Foreground="#B3B3B3"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock x:Name="txtPrice" Text="0" FontSize="36" FontWeight="Bold" Foreground="#1DB954"/>
                        <TextBlock Text="ILS" FontSize="20" Foreground="#666666" VerticalAlignment="Bottom" Margin="5,0,0,8"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- My Instruments Section -->
            <Border Grid.Column="0" Background="#1E1E1E" CornerRadius="12" Padding="30">
                <StackPanel>
                    <TextBlock Text="ðŸŽ¸ My Instruments" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,20"/>
                    
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="icInstruments">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2A2A2A" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="ðŸŽµ" FontSize="24" Margin="0,0,15,0"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <TextBlock x:Name="txtNoInstruments" Text="No instruments selected yet. Add some in Settings!" 
                               FontSize="14" Foreground="#666666" Margin="0,10,0,0" Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- Quick Actions Section -->
            <Border Grid.Column="2" Background="#1E1E1E" CornerRadius="12" Padding="30">
                <StackPanel>
                    <TextBlock Text="âš¡ Quick Actions" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,20"/>
                    
                    <Button x:Name="btnViewProfile" Click="btnViewProfile_Click" Margin="0,0,0,15" Height="50" Background="#2A2A2A" BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" CornerRadius="8" Background="{TemplateBinding Background}" Padding="15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ‘¤" FontSize="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="View My Profile" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333333"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnManageSchedule" Click="btnManageSchedule_Click" Margin="0,0,0,15" Height="50" Background="#2A2A2A" BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" CornerRadius="8" Background="{TemplateBinding Background}" Padding="15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ“…" FontSize="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="Manage Schedule" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333333"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnEditProfile" Click="btnEditProfile_Click" Margin="0,0,0,15" Height="50" Background="#2A2A2A" BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" CornerRadius="8" Background="{TemplateBinding Background}" Padding="15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="âœï¸" FontSize="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="Edit Settings" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333333"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnManageInstruments" Click="btnManageInstruments_Click" Height="50" Background="#2A2A2A" BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" CornerRadius="8" Background="{TemplateBinding Background}" Padding="15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸŽ¹" FontSize="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="Manage Instruments" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333333"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
