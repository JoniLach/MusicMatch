<Page x:Class="MusicMatch.Signup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicMatch"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#121212"
      Title="Signup">
    

    <Grid>
        <Viewbox Stretch="Uniform" Margin="0,50,0,50" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Border CornerRadius="12">
                <Border
                BorderThickness="2"
                CornerRadius="10"
                Opacity="0.95">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Offset="0" Color="#222222" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Grid>
                        <StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                            <TextBlock
                                Height="30"
                                HorizontalAlignment="Center"
                                FontSize="25"
                                FontWeight="Medium"
                                Foreground="White"
                                Text="Music Match" />
                            <TextBlock Text="Username" Foreground="LightGray"/>
                            <TextBox x:Name="txtUser" Margin="0,0,0,10" Foreground="White"/>

                            <TextBlock Text="Password" Foreground="LightGray"/>
                            <PasswordBox x:Name="txtPass" Margin="0,0,0,10" Foreground="White" />

                            <TextBlock Text="Email" Foreground="LightGray" />
                            <TextBox x:Name="txtEmail" Margin="0,0,0,10" Foreground="White"/>

                            <TextBlock Text="First Name" Foreground="LightGray"/>
                            <TextBox x:Name="txtFirstName" Margin="0,0,0,10" Foreground="White"/>

                            <TextBlock Text="Last Name" Foreground="LightGray"/>
                            <TextBox x:Name="txtLastName" Margin="0,0,0,10" Foreground="White"/>

                            <TextBlock Text="City" Foreground="LightGray"/>
                            <TextBox x:Name="txtCity" Margin="0,0,0,10" Foreground="White" />

                            <TextBlock Text="Profile Picture (Optional)" Foreground="LightGray"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="txtProfilePicture" Foreground="White" Text="No file selected" Margin="0,10,0,0"/>
                                <Button x:Name="btnBrowseProfilePic" Grid.Column="2" Content="Browse..." Click="btnBrowseProfilePic_Click" 
                                        Background="#1DB954" Foreground="White" Padding="10,5" Cursor="Hand"/>
                            </Grid>

                            <CheckBox x:Name="chkIsTeacher" Content="Sign up as a teacher" Margin="0,0,0,10" Foreground="LightGray"/>


                            <Button
                            x:Name="btnSignUp"
                            Click="btnSignUp_Click"
                            Content="SIGN UP"
                            Cursor="Hand"
                            Margin="0,10,0,0"
                            Foreground="White">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#1DB954" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1ED760" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                        Width="150"
                                        Height="40"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button
                            VerticalAlignment="Center"
                            x:Name="SwitchToLogIn"
                            Click="SwitchToLogIn_Click"
                            Content="log in"
                            Cursor="Hand"
                            FontSize="12"
                            FontWeight="Bold"
                            Foreground="White">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter HorizontalAlignment="Center"  VerticalAlignment="Center" />
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>

                    </Grid>
                </Border>

            </Border>
        </Viewbox>

        <Frame
            x:Name="MainFrame"
            Grid.RowSpan="3"
            Grid.ColumnSpan="3"
            NavigationUIVisibility="Hidden" Navigated="MainFrame_Navigated" />
    </Grid>
</Page>
