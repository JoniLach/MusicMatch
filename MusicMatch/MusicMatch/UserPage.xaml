<Page x:Class="MusicMatch.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicMatch"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid Background="#F9FAFB">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">

            <!-- Title -->
            <TextBlock Text="Contact Information" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="#111827" 
                       HorizontalAlignment="Center"/>

            <!-- First Name -->
            <Border Background="#FFFFFF" 
                    CornerRadius="12" 
                    Padding="15" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" RenderTransformOrigin="0.167,0.568" 
                    >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="First Name" 
                       FontSize="16" 
                       Foreground="#374151" 
                       FontWeight="SemiBold"
                       Padding="0,0,40,0"/>
                    <TextBlock Text="{Binding FirstName}" 
                       FontSize="16" 
                       Foreground="#374151" 
                       FontWeight="SemiBold"/>
                </StackPanel>


            </Border>

            <!-- Last Name -->
            <Border Background="#FFFFFF" 
                    CornerRadius="12" 
                    Padding="15" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Last Name" 
                           FontSize="16" 
                           Foreground="#374151" 
                           FontWeight="SemiBold"
                           Padding="0,0,40,0"/>
                    <TextBlock Text="{Binding LastName}" 
                           FontSize="16" 
                           Foreground="#374151" 
                           FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <!-- Phone -->
            <Border Background="#FFFFFF" 
                    CornerRadius="12" 
                    Padding="15" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Phone Number" 
                           FontSize="16" 
                           Foreground="#374151" 
                           FontWeight="SemiBold"
                           Padding="0,0,40,0"/>
                    <TextBlock Text="{Binding Telephone}" 
                       FontSize="16" 
                       Foreground="#374151" 
                       FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Page>