<Page x:Class="MusicMatch.ManageSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicMatch"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Manage Schedule" Background="#121212">

    <Page.Resources>
        <local:StatusColorConverter x:Key="StatusColorConverter"/>
        <local:StatusTextConverter x:Key="StatusTextConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Manage Schedule" FontSize="28" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,0,0,20"/>

        <!-- Add Slot Form -->
        <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="10" Padding="20" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Date"  Foreground="White" Margin="0,0,0,5"/>
                    <DatePicker x:Name="dpDate" Foreground="White" Width="150" Height="30" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Start Time" Foreground="White" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbTime"  Foreground="White" Width="100" Height="30" VerticalContentAlignment="Center">
                        <!-- Populated in code behind -->
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Duration (min)" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtDuration" Text="60" Width="80" Height="30" VerticalContentAlignment="Center" Background="#333333" Foreground="White" BorderThickness="0"/>
                </StackPanel>

                <Button x:Name="btnAddSlot" Content="Add Slot" Click="btnAddSlot_Click" Width="100" Height="30" VerticalAlignment="Bottom" Background="#1DB954" Foreground="White" BorderThickness="0" FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

        <!-- Schedule List -->
        <ListView x:Name="lstSchedule" Grid.Row="2" Background="Transparent" BorderThickness="0">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border Background="#1E1E1E" CornerRadius="8">
                                    <ContentPresenter/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding LessonDate, StringFormat=D}" Foreground="White" FontWeight="SemiBold" FontSize="16"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="{Binding StartTime}" Foreground="#BBBBBB" FontSize="14"/>
                                <TextBlock Text=" • " Foreground="#555555"/>
                                <TextBlock Text="{Binding Duration}" Foreground="#BBBBBB" FontSize="14"/>
                                <TextBlock Text=" mins" Foreground="#BBBBBB" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>

                        <Border Grid.Column="1" Background="{Binding IsBooked, Converter={StaticResource StatusColorConverter}}" CornerRadius="4" Padding="15,5" MinWidth="100">
                           <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                               <TextBlock Text="⚠ " Visibility="{Binding IsBooked, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="White" FontWeight="Bold"/>
                               <TextBlock Text="{Binding IsBooked, Converter={StaticResource StatusTextConverter}}" Foreground="White" FontWeight="Bold" FontSize="12"/>
                           </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Footer -->
        <Button Grid.Row="3" x:Name="btnBack" Content="Back" Click="btnBack_Click" Width="100" Height="35" HorizontalAlignment="Left" Margin="0,20,0,0" Background="#333333" Foreground="White" BorderThickness="0">
             <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
