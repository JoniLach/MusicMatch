<Page x:Class="MusicMatch.TeacherHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicMatch"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="TeacherHomePage "
      Background="#121212">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,30">
            <StackPanel HorizontalAlignment="Left">
                <TextBlock x:Name="txtWelcome" Text="Welcome back, Teacher!" FontSize="32" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Here's your teaching dashboard" FontSize="16" Foreground="#B3B3B3" Margin="0,5,0,0"/>
            </StackPanel>
            
            <Button x:Name="btnLogout" Click="btnLogout_Click" HorizontalAlignment="Right" VerticalAlignment="Center" 
                    Content="Logout" Background="Transparent" Foreground="#FF5555" BorderThickness="0" Cursor="Hand" FontSize="14"/>
        </Grid>

        <!-- Stats Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Jobs Card -->
            <Border Grid.Column="0" Background="#1E1E1E" CornerRadius="12" Padding="25">
                <StackPanel>
                    <TextBlock Text="ðŸ“Š" Foreground="White"  FontSize="32" Margin="0,0,0,10"/>
                    <TextBlock Text="Total Jobs" FontSize="14" Foreground="#B3B3B3"/>
                    <TextBlock x:Name="txtTotalJobs" Text="0" FontSize="36" FontWeight="Bold" Foreground="#1DB954" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Rating Card -->
            <Border Grid.Column="2" Background="#1E1E1E" CornerRadius="12" Padding="25">
                <StackPanel>
                    <TextBlock Text="â­" Foreground="White" FontSize="32" Margin="0,0,0,10"/>
                    <TextBlock Text="Your Rating" FontSize="14" Foreground="#B3B3B3"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock x:Name="txtRating" Text="0.0" FontSize="36" FontWeight="Bold" Foreground="#FFD700"/>
                        <TextBlock Text="/5.0" FontSize="20" Foreground="#666666" VerticalAlignment="Bottom" Margin="5,0,0,8"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Hourly Rate Card -->
            <Border Grid.Column="4" Background="#1E1E1E" CornerRadius="12" Padding="25">
                <StackPanel>
                    <TextBlock Text="ðŸ’°" Foreground="White" FontSize="32" Margin="0,0,0,10"/>
                    <TextBlock Text="Hourly Rate" FontSize="14" Foreground="#B3B3B3"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock x:Name="txtPrice" Text="0" FontSize="36" FontWeight="Bold" Foreground="#1DB954"/>
                        <TextBlock Text="ILS" FontSize="20" Foreground="#666666" VerticalAlignment="Bottom" Margin="5,0,0,8"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Col: Upcoming Sessions & Instruments -->
            <StackPanel Grid.Column="0">
                
                <!-- Upcoming Sessions -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="30" Margin="0,0,0,30">
                    <StackPanel>
                         <TextBlock Text="ðŸ“… Upcoming Sessions" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,20"/>
                         <ItemsControl x:Name="lstUpcoming">
                             <ItemsControl.ItemsPanel>
                                 <ItemsPanelTemplate>
                                     <WrapPanel Orientation="Horizontal"/>
                                 </ItemsPanelTemplate>
                             </ItemsControl.ItemsPanel>
                             <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2A2A2A" CornerRadius="8" Padding="15" Margin="0,0,10,10" Width="200">
                                        <StackPanel>
                                            <TextBlock Text="{Binding StudentName, StringFormat='Session with {0}'}" Foreground="White" FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding LessonDate, StringFormat=d}" Foreground="#DDDDDD" FontSize="12" Margin="0,5,0,0"/>
                                            <TextBlock Text="{Binding StartTime}" Foreground="#BBBBBB" FontSize="12" Margin="0,2,0,0"/>
                                            <Border Background="#1DB954" CornerRadius="4" Padding="8,3" HorizontalAlignment="Left" Margin="0,8,0,0">
                                                <TextBlock Text="CONFIRMED" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                             </ItemsControl.ItemTemplate>
                         </ItemsControl>
                         <TextBlock x:Name="txtNoUpcoming" Text="No upcoming sessions." Foreground="#666666" Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <!-- Past Sessions (History) -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="30" Margin="0,0,0,30" x:Name="bdHistory" Visibility="Collapsed">
                    <StackPanel>
                         <TextBlock Text="ðŸ“œ History &amp; Student Ratings" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,20"/>
                         <ItemsControl x:Name="lstHistory">
                             <ItemsControl.ItemsPanel>
                                 <ItemsPanelTemplate>
                                     <WrapPanel Orientation="Horizontal"/>
                                 </ItemsPanelTemplate>
                             </ItemsControl.ItemsPanel>
                             <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2A2A2A" CornerRadius="8" Padding="15" Margin="0,0,10,10" Width="220">
                                        <StackPanel>
                                            <TextBlock Text="{Binding StudentName, StringFormat='Session with {0}'}" Foreground="White" FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding LessonDate, StringFormat=d}" Foreground="#999999" FontSize="12" Margin="0,5,0,0"/>
                                            
                                            <Button Content="â­ Rate Student" Click="btnRate_Click" Tag="{Binding}" Margin="0,10,0,0" Height="30" Background="#333333" Foreground="#FFD700" BorderThickness="0" Cursor="Hand">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" CornerRadius="4" Background="{TemplateBinding Background}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#444444"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                             </ItemsControl.ItemTemplate>
                         </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- My Instruments Section -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="30">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ¸ My Instruments" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,20"/>
                        
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                            <ItemsControl x:Name="icInstruments">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#2A2A2A" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="ðŸŽµ" Foreground="White" FontSize="24" Margin="0,0,15,0"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <TextBlock x:Name="txtNoInstruments" Text="No instruments selected yet. Add some in Settings!" 
                                   FontSize="14" Foreground="#666666" Margin="0,10,0,0" Visibility="Collapsed"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Col: Notifications & Quick Actions -->
            <StackPanel Grid.Column="2">
                
                <!-- NOTIFICATIONS SECTION -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="30" Margin="0,0,0,30">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="ðŸ”” Notifications" FontSize="20" FontWeight="SemiBold" Foreground="White"/>
                            <Border x:Name="bdBadge" Background="#FF5555" CornerRadius="10" MinWidth="20" Height="20" Margin="10,0,0,0" Visibility="Collapsed">
                                <TextBlock x:Name="txtBadgeCount" Text="0" Foreground="White" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5,0"/>
                            </Border>
                        </StackPanel>

                       <ListView x:Name="lstNotifications" BorderThickness="0" Background="Transparent" MaxHeight="300" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                           <ListView.ItemTemplate>
                               <DataTemplate>
                                   <Border Background="#2A2A2A" CornerRadius="8" Padding="10" Margin="0,0,0,10" Cursor="Hand" MouseLeftButtonDown="Notification_Click">
                                       <DockPanel>
                                            <TextBlock Text="â€¢" Foreground="#1DB954" FontSize="20" Margin="0,0,10,0" DockPanel.Dock="Left" VerticalAlignment="Top"/>
                                            <TextBlock Text="{Binding Message}" Foreground="#DDDDDD" TextWrapping="Wrap" FontSize="12"/>
                                       </DockPanel>
                                   </Border>
                               </DataTemplate>
                           </ListView.ItemTemplate>
                       </ListView>
                       <TextBlock x:Name="txtNoNotifications" Text="No new notifications" Foreground="#666666" Margin="0,10,0,0"/>
                        
                    </StackPanel>
                </Border>

                <!-- Quick Actions Section -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="30">
                <StackPanel>
                    <TextBlock Text="âš¡ Quick Actions" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,20"/>
                    
                    <Button x:Name="btnViewProfile" Click="btnViewProfile_Click" Margin="0,0,0,15" Height="50" Background="#2A2A2A" BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" CornerRadius="8" Background="{TemplateBinding Background}" Padding="15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ‘¤" FontSize="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="View My Profile" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333333"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnManageSchedule" Click="btnManageSchedule_Click" Margin="0,0,0,15" Height="50" Background="#2A2A2A" BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" CornerRadius="8" Background="{TemplateBinding Background}" Padding="15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ“…" FontSize="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="Manage Schedule" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333333"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>


                    <Button x:Name="btnManageInstruments" Click="btnManageInstruments_Click" Height="50" Background="#2A2A2A" BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" CornerRadius="8" Background="{TemplateBinding Background}" Padding="15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸŽ¹" FontSize="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="Manage Instruments" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333333"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
